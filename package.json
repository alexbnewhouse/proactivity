{
  "name": "proactivity",
  "version": "1.0.0",
  "description": "A proactive AI assistant for ADHD-focused dissertation writing with Obsidian integration",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd src/backend && nodemon server.js",
    "frontend:dev": "vite",
    "build": "npm run backend:build && npm run frontend:build && npm run plugin:build",
    "backend:build": "echo 'Backend build not implemented yet'",
    "frontend:build": "vite build",
    "plugin:build": "cd src/obsidian-plugin && npm run build",
    "test": "npm run test:sync && npm run test:integration",
    "test:sync": "bash test-sync.sh",
    "test:integration": "bash test-integration-sync.sh",
    "test:all": "bash test-sync.sh && bash test-integration-sync.sh && find . -name 'test-*.sh' -not -name 'test-sync.sh' -not -name 'test-integration-sync.sh' -exec bash {} \\;",
    "lint": "npm run lint:js && npm run lint:extension",
    "lint:js": "find src -name '*.js' -exec node -c {} \\;",
    "lint:extension": "node -c src/browser-extension/manifest.json || echo 'Manifest validation completed'",
    "start": "node src/backend/server.js",
    "ci": "npm run lint && npm run test:all && npm run build",
    "setup": "bash setup-dev.sh",
    "start-all": "bash start-all.sh"
  },
  "keywords": [
    "adhd",
    "productivity",
    "dissertation",
    "ai",
    "obsidian",
    "academic-writing",
    "executive-function"
  ],
  "type": "module",
  "author": "Proactivity Team",
  "license": "MIT",
  "dependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "vite": "^7.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
